{
  "name": "use-smart-fetch",
  "version": "1.0.6",
  "description": "useSmartFetch is a custom React hook that simplifies making HTTP requests using the native fetch API while automatically managing loading states, errors, caching, and expiration.",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:tsup": "tsup src/index.ts --dts --format esm,cjs",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Joao-Pacheco/useSmartFetch.git"
  },
  "keywords": [
    "fetch",
    "react",
    "cache",
    "hook",
    "custom-hook"
  ],
  "author": "Joao Pacheco",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Joao-Pacheco/useSmartFetch/issues"
  },
  "homepage": "https://github.com/Joao-Pacheco/useSmartFetch#readme",
  "devDependencies": {
    "@swc/core": "^1.10.17",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "react": "^19.0.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3"
  }
}
